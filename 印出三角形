n=int(input("輸入層數:"))
for i in range(1,n+1):
  for j in range(1,i+1):  #直角三角形
    print("*",end="")
  print("")
print("\n")


for i in range(n):
  for j in range(n-i-1):
    print(" ",end="")
  for k in range(i+1):
    print("*",end="")
  print()
print("\n")

for i in range(1,n+1):   #畫空白的部分
    print(" "*(n-i)+"*"*(i*2-1))            #等腰三角形
print("\n")


for i in range(1,n):
    print(' ' * (n-1-i) + '*' * (2*i-1))  #菱形
for i in reversed(range(1,n-1)):
    print(' ' * (n-1-i) + '*' * (2*i-1))
